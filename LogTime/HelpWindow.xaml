<Window x:Class="LogTime.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:LogTime"
        mc:Ignorable="d"
        Title="Acerca de LogTime" 
        ResizeMode="NoResize"
        Topmost="True"
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <StackPanel Margin="20, 10">
            <!-- Title Section -->
            <TextBlock x:Name="AppNameVersion" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10" 
                   Foreground="#333333" 
                   HorizontalAlignment="Center" />

            <!-- Description Section -->
            <TextBlock Text="LogTime es una aplicación de registro de tiempo diseñada para monitorear y gestionar el tiempo que los agentes pasan logueados, así como las actividades seleccionadas durante sus sesiones." 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   Margin="0,0,0,10" 
                   Foreground="#555555" 
                   HorizontalAlignment="Center" />

            <!-- Copyright Section -->
            <TextBlock x:Name="CopyRightText" 
                   HorizontalAlignment="Center" 
                   FontSize="12" 
                   Foreground="#777777" 
                   Margin="0,0,0,10" />
        </StackPanel>

        <!-- Footer Section -->
        <Border Background="#E6E6E6" Height="40" VerticalAlignment="Bottom" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0">
                <!-- Hyperlink -->
                <TextBlock Margin="10, 5, 70, 0" FontSize="12" Foreground="#0065B1">
                <Hyperlink NavigateUri="http://intranet/SynergiesSystem" RequestNavigate="NavigateToUrl">
                    Visitar la página oficial de la aplicación
                </Hyperlink>
                </TextBlock>

                <!-- Button -->
                <Button Content="Cerrar" Width="80" 
                    Margin="0, 0, 10, 0" 
                    Click="CloseButton_Click" 
                    HorizontalAlignment="Left"
                    Background="#0065B1" 
                    Foreground="White"
                    BorderBrush="#0065B1"
                    BorderThickness="1"
                    Padding="5"
                    FontWeight="Bold"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>

</Window>


