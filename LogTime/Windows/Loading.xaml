<Window x:Class="LogTime.Windows.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogTime" 
        xmlns:customcontrols="clr-namespace:LogTime.CustomControls"
        mc:Ignorable="d"
        Title="Loading" Height="60" Width="380" 
        ResizeMode="NoResize" 
        Topmost="true"
        Background="Transparent"
        AllowsTransparency="True" 
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Border Background="#FFF" CornerRadius="8">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Foreground="#333" Text="{Binding Message}" 
                       FontSize="16" 
                       Margin="10" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" />

            <ProgressBar IsIndeterminate="True" Width="400" Height="10" />

        </StackPanel>
    </Border>
</Window>
