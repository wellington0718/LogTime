<Window x:Class="LogTime.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogTime"
        mc:Ignorable="d"
        Background="Transparent"
        ThemeMode="Dark"
        AllowsTransparency="True"
        Topmost="True"
        WindowStyle="None" ResizeMode="NoResize"
        Width="400" MinHeight="180" MaxHeight="200"
        WindowStartupLocation="CenterOwner">


    <Border CornerRadius="8" Background="#323232">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="{Binding Caption}" FontSize="16" FontWeight="Bold" 
                Grid.Row="0" Padding="10, 5" Foreground="White" Background="#202020"/>

            <!-- Message with Image -->
            <Grid Grid.Row="1" Margin="10, 20, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="{Binding ImageSource}" Width="30" Height="50" Margin="0,0,10,0" Grid.Column="0"/>

                <TextBlock Text="{Binding Message}" VerticalAlignment="Center" Foreground="White" TextWrapping="Wrap" Grid.Column="1" FontSize="14"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Margin="5" x:Name="ButtonPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</Window>
